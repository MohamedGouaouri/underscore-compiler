# We'll use an id whenever we need to fill the space of an expression
# ends of if statements (elif) not detected properly (either a little too late or a little too early)

# Recursive factorial function
()_ $_ fact($_ n){
    ? (n <= 1){
        -> 1;
    }
    :() {
        -> n * fact(n - 1);
    }
}

()_ $_ add($_ a , $_b , $_c){
    -> a+b+c;
}

()_ ?_ entry_test(){
    # Your calls here
    
    $_ sum <- 10 + (100 ^ 10) ;
    ?_ found <- false;
    ""_ name <- "Souaad";
    {}_ student {""_ name, $_ gpa};
    {}_ other_info { $_ age };
    {}_ student {""_ name, $_ gpa , _other_info ageStruct };
    _student s1;
    s1.ageStruct.age <- 20;

    $_ student_gpa <- student.gpa ;
    $[]_ array_numbers <- [1, 2, 3];
    array_numbers [ sum + ( student.gpa.age ) ] <- !found;
    WRITE( array_numbers[ sum + 2 ]) ;
    WRITE( student_gpa );
    $_ fact_5 <- fact(5);
    WRITE( add( sum , sum * ( sum+2 ) , @found ) );
    -> true;
}